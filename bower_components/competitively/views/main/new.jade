<form class="form-horizontal" action="/competition/create" method="post">
<fieldset>

<!-- Form Name -->
<legend>New Competition</legend>

<!-- Text input-->
<div class="input-group">
  <label class="col-md-4 control-label" for="name">Name</label>  
  <div class="col-md-5">
  <input id="name" name="name" type="text" placeholder="" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Textarea -->
<div class="input-group">
  <label class="col-md-4 control-label" for="description">Description</label>
  <div class="col-md-4">                     
    <textarea class="form-control" id="description" name="description"></textarea>
  </div>
</div>

<!-- Text input-->
<div class="input-group">
  <label class="col-md-4 control-label" for="tags">Tags</label>  
  <div class="col-md-8">
  <input id="tags" name="tags" type="text" placeholder="" class="form-control input-md">
    
  </div>
</div>

<!-- Text input-->
<div class="input-group input-group-lg">
  <label class="col-md-4 control-label" for="img_url">Image URL</label>  
  <div class="col-md-8">
  <input id="img_url" name="img_url" type="text" placeholder="" class="form-control input-md">
    
  </div>
</div>

<!-- File Button --> 
<div class="input-group input-group-lg">
  <label class="col-md-4 control-label" for="image">Image</label>
  <div class="col-md-4">
    <input id="image" name="image" class="input-file" type="file">
  </div>
</div>

<!-- Button -->
<div class="control-group">
  <div class="controls">
    <button id="submitButton" name="submitButton" class="btn btn-primary">Submit</button>
  </div>
</div>

</fieldset>
</form>
